<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receipt_image"
        android:layout_width="@dimen/receipt_image_size"
        android:layout_height="@dimen/receipt_image_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/offset_2"
        android:src="@color/white"
        app:civ_border_color="@color/gray"
        app:civ_border_width="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receipt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Title"/>

        <TextView
            android:id="@+id/receipt_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="ingredients"/>
    </LinearLayout>

</LinearLayout>